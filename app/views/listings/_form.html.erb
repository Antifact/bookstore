<%# 
  This is how the errors are via the form, which is used for the edit page of a listing 
%>

<%= form_with(model: listing) do |form| %>
  <% if listing.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(listing.errors.count, "error") %> prohibited this listing from being saved:</h2>


      <%# 
        This prints each error message that may have occured while editing a listing
      %>
      <ul>
        <% listing.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <!-- Bootstrap styled form  -->
  <div class="card">
    <div class="card-body">

      <!-- this class is a shortcut for applying a bottom margin of 3px -->
      <div class="mb-3">
        <%= form.label :title, class: "form-label" %>
        <%= form.text_field :title, { class: "form-control", required: true } %>
      </div>

      <div class="mb-3">
        <%= form.label :price, class: "form-label" %>
        <%= form.text_field :price, { class: "form-control", required: true } %>
      </div>

      <div class="mb-3">
        <%= form.label :description, class: "form-label" %>
        <%= form.text_field :description, { class: "form-control", required: true } %>
      </div>

      <div class="mb-3">
        <%= form.label :picture, class: "form-label" %>
        <%= form.file_field :picture, { class: "form-control-file", accept: "image/jpg, image/png, image/jpeg", required: true } %>
      </div>

      <div class="actions">
        <%= form.submit "Update" %>
      </div>

    </div>
  </div>
<% end %>
